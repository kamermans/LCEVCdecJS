{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "strict": false,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "lib": ["dom", "es2015"],
    "outDir": "./dist/",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist/**/*"]
}